<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Name</h4>
        <p class="card-text">@Description</p>
        <button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View @Name</strong></button>
    </div>
</div>

@code {
    [Parameter]
    public String? Name { get; set; }

    [Parameter]
    public String? Description { get; set; }
}
