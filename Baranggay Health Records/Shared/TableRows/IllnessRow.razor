@inject Context context

<tr>
    <td class="text-truncate" style="max-width: 200px;">@ID</td>
    <td class="text-truncate" style="max-width: 200px;">@IllnessName</td>
    <td>
        <a href="/bhw/illness/@ID" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-eye-fill fs-5" style="color: white;">
                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"></path>
                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"></path>
            </svg>
        </a>
    </td>
</tr>

@code {
    [Parameter]
    public int ID { get; set; }

    [Parameter]
    public String? IllnessName { get; set; }

    public int Occurence { get; set; }

    protected override void OnInitialized()
    {
        Occurence = context.GetIllnessCount(ID);
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            Occurence = context.GetIllnessCount(ID);
            StateHasChanged();
        }
    }
}