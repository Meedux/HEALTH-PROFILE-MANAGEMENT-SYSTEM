<tr>
    <td class="text-truncate" style="max-width: 200px;">@ID</td>
    <td class="text-truncate" style="max-width: 200px;">@FullName</td>
    <td>@BirthDate</td>
    <td class="text-truncate" style="max-width: 200px;">@Age</td>
    <td class="text-truncate" style="max-width: 200px;">@Gender</td>
    <td class="text-truncate" style="max-width: 200px;">@TypeofIllness</td>
    <td class="text-truncate" style="max-width: 200px;">@Height</td>
    <td class="text-truncate" style="max-width: 200px;">@Weight</td>
    <td>@BP</td>
    <td>@Temp</td>
    <td>@Purok</td>
    <td>@Date</td>
    <td class="text-center">
        <a href="/bhw/resident/@ID">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-eye-fill fs-5 text-primary">
                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"></path>
                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"></path>
            </svg>
        </a>
    </td>
    <td class="text-center">
        <a href="/bhw/resident/@ID?isEdit=True">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-pencil-square fs-5 text-primary">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
            </svg>
        </a>
    </td>
    <td class="text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-trash-fill fs-5 text-primary" style="/*color: var(--bs-red) !important;*/">
            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"></path>
        </svg>
    </td>
</tr>

@code {

    [Parameter]
    public int? ID { get; set; }

    [Parameter]
    public String? FullName { get; set; }

    [Parameter]
    public String? BirthDate { get; set; }

    [Parameter]
    public int? Age { get; set; }

    [Parameter]
    public String? Gender { get; set; }

    [Parameter]
    public String? TypeofIllness { get; set; }

    [Parameter]
    public String? Height { get; set; }

    [Parameter]
    public String? Weight { get; set; }

    [Parameter]
    public String? BP { get; set; }

    [Parameter]
    public String? Temp { get; set; }

    [Parameter]
    public String? Purok { get; set; }

    [Parameter]
    public String? Date { get; set; }
}