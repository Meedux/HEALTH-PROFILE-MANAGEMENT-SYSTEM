<div class="card d-lg-flex" style="height: 200px;">
    <div class="card-body d-flex d-lg-flex flex-column justify-content-lg-center">
        <div class="d-lg-flex justify-content-lg-start align-items-lg-center">
            @ChildContent
            <h3>@Name</h3>
        </div>
        <h2 class="text-center text-muted card-subtitle mb-2">@Count</h2>
        <a class="btn btn-success" href="@url">View</a>
    </div>
</div>

@code {
    [Parameter]
    public String? Name { get; set; }

    [Parameter]
    public int Count { get; set; } = 0;

    [Parameter]
    public String? url { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
