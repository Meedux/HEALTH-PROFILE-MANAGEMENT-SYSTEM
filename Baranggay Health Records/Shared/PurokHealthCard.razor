<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Name</h4>
        <p class="card-text">Total: @Count</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
    </div>
</div>

@code {
    [Parameter] public String? Name { get; set; } = String.Empty;

    [Parameter] public int? Count { get; set; } = 0;
}
