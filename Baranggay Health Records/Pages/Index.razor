@page "/"
@inject NavigationManager Navigation
@inject Context context

<section class="py-4 py-xl-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-4">
                <div class="card mb-5">
                    <div class="card-body d-flex flex-column align-items-center">
                        <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
                                <!-- Your SVG code here -->
                            </svg>
                        </div>
                        <h2>Sign In</h2>
                        <div class="text-center">
                            <div class="mb-3"><input class="form-control" type="email" name="email" placeholder="Email" @bind="email"></div>
                            <div class="mb-3"><input class="form-control" type="password" name="password" placeholder="Password" @bind="password"></div>
                            <div class="mb-3"><button class="btn btn-primary d-block w-100" @onclick="@SignIn">Login</button></div>
                            <p class="text-muted">Forgot your password?</p>
                            @if (string.IsNullOrEmpty(errorMessage))
                            {
                                <p class="text-danger">@errorMessage</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-6 text-center d-md-flex mx-auto justify-content-md-center align-items-md-center">
                <img src="https://media.discordapp.net/attachments/1175024429626052658/1204668208070791168/received_2015597025462557.jpg?ex=65d591b2&is=65c31cb2&hm=1dd0fe59de82984ff1b236912b6ba32d4b2d3f542f969922a6995d531d136022&=&format=webp&width=388&height=388" height="350" widht="250" />
            </div>
        </div>
    </div>
</section>

@code {
    public String? email { get; set; }
    public String? password { get; set; }
    public String errorMessage { get; set; } = "";

    public void SignIn()
    {
        if (context.Login(email, password, Navigation))
        {
            errorMessage = string.Empty;
        }
        else
        {
            errorMessage = "Invalid email or password";
        }
    }
}
