@code {


    protected override void OnInitialized()
    {
        PopulateDashboard();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            PopulateDashboard();
        }
    }

    public int? TotalIllnessOccuredCount { get; set; } = 1000;

    public int? MedicineCount { get; set; } = 0;

    public int? ResidentsCount { get; set; } = 0;

    public int? TotalSeniorCitizenCount { get; set; } = 0;

    public int? MinorCount { get; set; } = 0;

    public int? AdultCount { get; set; } = 0;

    public int? NewBornCount { get; set; } = 0;

    public int? PrenatesCount { get; set; } = 0;

    public int? HouseholdCount { get; set; } = 0;

    public int? PWDCount { get; set; } = 0;

    public void PopulateDashboard()
    {
        Console.WriteLine("Populating BHW Dashboard ");
        TotalIllnessOccuredCount = context.GetTotalIllnessesOccured();
        MedicineCount = context.GetTotalMedicine();
        ResidentsCount = context.GetResidentCount();
        TotalSeniorCitizenCount = context.GetTotalSeniorCitizenCount();
        MinorCount = context.GetTotalMinorCount();
        AdultCount = context.GetTotalAdultCount();
        NewBornCount = context.GetTotalNewBorn();
        PrenatesCount = context.GetTotalPrenates();
        HouseholdCount = context.GetTotalHouseholds();
        PWDCount = context.GetTotalPWD();

    }
}