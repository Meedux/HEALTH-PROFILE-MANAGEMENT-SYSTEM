@layout BHWLayout
@page "/bhw/{purok}/senior-citizen"
@inject Context context
@inject IJSRuntime JS
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Purok @purok: Senior Citizen List</h1>
        </div>
    </div>
</div>
<div class="container" style="margin-top: 25px;">
    <div class="row">
        <div class="col d-flex justify-content-between">
            <Button Color="Color.Primary" Clicked="@GenerateRecord">Generate Record</Button>
        </div>
    </div>
    <div class="row justify-content-center" style="margin-top: 24px;">
        <div class="col-xl-10 col-xxl-9">
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID No.</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>Purok</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ResidentModel seniors in Seniors)
                                {
                                    @if (context.isArchived(seniors))
                                    {
                                        if (seniors.GetResidentAge() > 60)
                                        {
                                            <SeniorCitizenRow ID="@seniors.GetID()"
                                                              LastName="@seniors.GetResidentLastName()"
                                                              FirstName="@seniors.GetResidentFirstName()"
                                                              MiddleName="@seniors.GetResidentMiddleName()"
                                                              Age="@seniors.GetResidentAge()"
                                                              Gender="@seniors.GetResidentGender()"
                                                              Purok="@seniors.GetPurok()" />
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string purok { get; set; } = "";
    public List<ResidentModel> Seniors { get; set; } = new List<ResidentModel>();

    protected override void OnInitialized()
    {
        List<ResidentModel> Residents = context.GetPurokResidents(purok);

        Seniors = Residents;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            List<ResidentModel> Residents = context.GetPurokResidents(purok);

            Seniors = Residents;
            StateHasChanged();
        }
    }

    private void GenerateRecord()
    {
        var seniors = Seniors.Where(s => s.GetResidentAge() > 60).ToList();
        context.GenerateResident(seniors, JS);
    }
}
