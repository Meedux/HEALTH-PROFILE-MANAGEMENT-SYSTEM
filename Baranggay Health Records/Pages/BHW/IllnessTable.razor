@layout BHWLayout
@using Baranggay_Health_Records.Shared
@page "/bhw/illness"
@inject Context context
@inject NavigationManager NavigationManager

<div class="container" style="margin-top: 115px;">
    <h1 class="text-center">Recorded Illnesses</h1>
</div>
<div class="container" style="margin-top: 21px;">
    <div class="row">
        @* <div class="col-lg-10 d-lg-flex align-items-lg-center">
            <div class="input-group">
                <span class="input-group-text">Search</span>
                <input class="form-control" type="text">
                <button class="btn btn-primary" type="button">
                    <Icon Name="@IconName.Search" IconStyle="IconStyle.Solid" />
                </button>
            </div>
        </div> *@
        <div class="col d-flex justify-content-between">
            <Button Color="Color.Primary" Clicked="@ShowModal">Add Illness</Button>
        </div>
    </div>
    <div class="row justify-content-center" style="margin-top: 24px;">
        <div class="col-xl-10 col-xxl-9">
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID No.</th>
                                    <th>Illness Name</th>
                                    <th>Recommended Medicine</th>
                                    <th>Occurence</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (IllnessModel i in ill)
                                {
                                    <IllnessRow id="@i.GetID()"
                                    IllnessName="@i.GetName()"
                                    RecommendedMedicine="@i.GetRecommendedMedicine()"
                                    Occurence="@i.GetOccurence()"/>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <nav>
                        <ul class="pagination pagination-sm mb-0 justify-content-center">
                            <li class="page-item"><a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <Modal @ref="modalRef">
        <ModalContent Centered>
            <ModalHeader>
                <ModalTitle>Add Illness Type</ModalTitle>
            </ModalHeader>
            <ModalBody>
                <Field>
                    <FieldLabel>Name</FieldLabel>
                    <TextEdit @bind-Text="@newIllness.IllnessName" Placeholder="Enter name..." />
                </Field>

                <Field>
                    <FieldLabel>Recommended Medicine</FieldLabel>
                    <Select @bind-SelectedValue="@newIllness.MedicineID" TValue="int">
                        <SelectItem value="@none">None</SelectItem>
                        @foreach (var medicine in medicines)
                        {
                            <SelectItem value="@medicine.ID">@medicine.MedicineName</SelectItem>
                        }
                    </Select>
                </Field>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary" Clicked="@HideModal">Close</Button>
                <Button Color="Color.Primary" Clicked="@SaveChanges">Save Changes</Button>
            </ModalFooter>
        </ModalContent>
    </Modal>
</div>

@code {
    public List<IllnessModel> ill { get; set; } = new List<IllnessModel>();
    public IllnessModel newIllness = new IllnessModel();
    List<ResidentMedicineModel> medicines = new List<ResidentMedicineModel>();

    int none = 0;


    protected override void OnInitialized()
    {
        ill = context.GetIllnesses();
        medicines = context.GetMedicines();
    }


    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            ill = context.GetIllnesses();
            medicines = context.GetMedicines();
        }
    }
    // reference to the modal component
    private Modal modalRef = new Modal();

    private Task ShowModal()
    {
        return modalRef.Show();
    }

    private void HideModal()
    {
        newIllness.IllnessName = "";
        newIllness.RecommendedMedicine = "";
        newIllness.Occurence = 0;
        modalRef.Hide();
    }

    private void SaveChanges()
    {
        var selectedMedicine = medicines.FirstOrDefault(m => m.ID == newIllness.MedicineID);
        if (selectedMedicine != null)
        {
            newIllness.RecommendedMedicine = selectedMedicine.MedicineName;
        }else
        {
            newIllness.RecommendedMedicine = "None";    
        }

        context.AddIllness(newIllness);
        HideModal();
        NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
    }
}