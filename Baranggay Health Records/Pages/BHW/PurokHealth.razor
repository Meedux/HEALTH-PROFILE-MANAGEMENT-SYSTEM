@layout BHWLayout
@page "/bhw/purok-health"
@inject Context context

<div class="container" style="margin-top: 86px;">
    <div class="row">
        <div class="col">
            <h1>Purok 1A Health Dashboard</h1>
        </div>
    </div>
    <div class="row" style="margin-bottom: 26px;">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Flu</h4>
                    <p class="card-text">Total: @FluCount</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Malnourished</h4>
                    <p class="card-text">Total: @MalnourishedCount</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Measles</h4>
                    <p class="card-text">Total: @MeaslesCount</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-bottom: 26px;">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Tuberculosis</h4>
                    <p class="card-text">Total: @TuberculosisCount</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Prenatal</h4>
                    <p class="card-text">Total: @PrenatalCount</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Deworming</h4>
                    <p class="card-text">Total: @DewormingCount</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-bottom: 26px;">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Household</h4>
                    <p class="card-text">Total: @HouseholdCount</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Senior Citizen</h4>
                    <p class="card-text">Total: @SeniorCitizenCount</p><button class="btn btn-primary" type="button" style="width: 100%;height: 100%;"><strong>View&nbsp;</strong></button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public int FluCount { get; set; } = 0;
    public int MalnourishedCount { get; set; } = 0;
    public int MeaslesCount { get; set; } = 0;
    public int TuberculosisCount { get; set; } = 0;
    public int PrenatalCount { get; set; } = 0;
    public int DewormingCount { get; set; } = 0;
    public int HouseholdCount { get; set; } = 0;
    public int SeniorCitizenCount { get; set; } = 0;

    protected override void OnInitialized()
    {
        FluCount = context.GetFluCount();
        MalnourishedCount = context.GetMalnourishedCount();
        MeaslesCount = context.GetMeaslesCount();
        TuberculosisCount = context.GetTuberculosisCount();
        PrenatalCount = context.GetPrenatalCount();
        DewormingCount = context.GetDewormingCount();
        HouseholdCount = context.GetHouseholdCount();
        SeniorCitizenCount = context.GetSeniorCitizenCount();
    }
}