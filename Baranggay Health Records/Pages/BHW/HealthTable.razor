@layout BHWLayout
@using Baranggay_Health_Records.Shared
@page "/bhw/purok-health/{Purok}/{Illness}"
@inject Context context

<div class="container" style="margin-top: 66px;">
    <h1 class="text-center">Purok @Purok?.ToUpper() - Illness @Illness?.ToUpper()</h1>
</div>
<div class="container" style="margin-top: 25px;">
    <div class="row">
        <div class="col-lg-10 d-lg-flex align-items-lg-center">
            <div class="input-group"><span class="input-group-text">Search</span><input class="form-control" type="text"><button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button></div>
        </div>
        <div class="col">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button">Purok</button>
                <div class="dropdown-menu"><a class="dropdown-item" href="#">Purok 1A</a><a class="dropdown-item" href="#">Purok 1A</a><a class="dropdown-item" href="#">Purok 2</a><a class="dropdown-item" href="#">Purok 3</a><a class="dropdown-item" href="#">Purok 4</a><a class="dropdown-item" href="#">Purok 5</a><a class="dropdown-item" href="#">Purok 6</a><a class="dropdown-item" href="#">Purok 7</a></div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center" style="margin-top: 24px;">
        <div class="col-xl-10 col-xxl-9">
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID No.</th>
                                    <th>Full Name</th>
                                    <th>BirthDate</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>Height</th>
                                    <th>Weight</th>
                                    <th>BP</th>
                                    <th>Temperature</th>
                                    <th>Diagnosed Date</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <HealthTableRow 
                                    ID="01" 
                                    Name="Juan" 
                                    BirthDate="01/01/2001" 
                                    Age="1" 
                                    Gender="Male" 
                                    Height="187cm" 
                                    Weight="59kg" 
                                    BloodPressure="90/140" 
                                    Temperature="37c" 
                                    Date="January, 01, 2023" 
                                />
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <nav>
                        <ul class="pagination pagination-sm mb-0 justify-content-center">
                            <li class="page-item"><a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public String? Purok { get; set; }

    [Parameter]
    public String? Illness { get; set; }

    public List<ResidentModel>? Residents { get; set; } = new List<ResidentModel>();
    public List<ResidentHealthStatusModel>? residentHealthStatuses { get; set; } = new List<ResidentHealthStatusModel>();

    protected override void OnInitialized()
    {
        Console.WriteLine($"Fetching Table Data with the Purok number of {Purok} and Illness type of {Illness}");
        Residents = context.GetResidents();
        residentHealthStatuses = context.GetResidentHealthStatuses();
    }
}
