@layout BHWLayout
@page "/bhw/inventory"
@inject Context context

<div class="container" style="margin-top: 115px;">
    <h1 class="text-center">Medicine Records</h1>
</div>
<div class="container" style="margin-top: 13px;">
    <div class="row">
        <div class="col">
            <InventoryCard MedicineName="Paracetamol" MedicineTotal="0"/>
        </div>
        <div class="col">
            <InventoryCard MedicineName="Mefinamic" MedicineTotal="0" />
        </div>
        <div class="col">
            <InventoryCard MedicineName="Biogesic" MedicineTotal="0" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <InventoryCard MedicineName="" MedicineTotal="0"/>
        </div>
    </div>
</div>
<div class="container" style="margin-top: 21px;">
    <div class="row">
        <div class="col-lg-10 d-lg-flex align-items-lg-center">
            <div class="input-group"><span class="input-group-text">Search</span><input class="form-control" type="text"><button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button></div>
        </div>
        <button class="btn btn-primary" type="button" data-bs-target="#medicine-modal" data-bs-toggle="modal">Add New Arrival</button>
    </div>
    <div class="row justify-content-center" style="margin-top: 24px;">
        <div class="col-xl-10 col-xxl-9">
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID No.</th>
                                    <th>Medicine Name</th>
                                    <th>Description</th>
                                    <th>Quality</th>
                                    <th>Stock</th>
                                    <th>Expiration Date</th>
                                    <th>Release Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <MedicineRow ID="01" MedicineName="Paracetamol" MedicineDescription="Sakit Ulo" Quality="3" Stock="97" ExpirationDate="09/12/2024" ReleaseDate="09/12/2024" />
                                <MedicineRow ID="02" MedicineName="Paracetamol" MedicineDescription="Sakit Ulo" Quality="3" Stock="97" ExpirationDate="09/12/2024" ReleaseDate="09/12/2024" />
                            
                                @foreach (ResidentMedicineModel medicine in residentMedicines)
                                {
                                    <MedicineRow ID="@medicine.GetID()"
                                                 MedicineName="@medicine.GetMedicineName()"
                                                 MedicineDescription="@medicine.GetDescription()"
                                                 Quality="@medicine.GetQuality()"
                                                 Stock="@medicine.GetStock()"
                                                 ExpirationDate="@medicine.GetExpirationDate()"
                                                 ReleaseDate="@medicine.GetReleaseDate()" />
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <nav>
                        <ul class="pagination pagination-sm mb-0 justify-content-center">
                            <li class="page-item"><a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" role="dialog" tabindex="-1" id="medicine-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">New Arrivale Drug From HMO</h4><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-column"><label class="form-label">Medicine Name</label><input type="text" placeholder="Ex. Paracetamol" required=""></div>
                    <div class="d-flex flex-column"><label class="form-label">Old Stock</label><input type="number"></div>
                    <div class="d-flex flex-column"><label class="form-label">New Stock</label><input type="number"></div>
                    <div class="d-flex flex-column"><label class="form-label">Expiration Date</label><input type="date"></div>
                    <div class="d-flex flex-column"><label class="form-label">Monthly Distribution</label><input type="date"></div>
                </div>
                <div class="modal-footer"><button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancel</button><button class="btn btn-primary" type="button">Add</button></div>
            </div>
        </div>
    </div>
</div>

@code {
    public int ParacetamolTotal { get; set; } = 0;
    public int MefinamicTotal { get; set; } = 0;
    public int BiogesicTotal { get; set; } = 0;

    public List<ResidentMedicineModel> residentMedicines { get; set; } = new List<ResidentMedicineModel>();

    protected override void OnInitialized()
    {
        ParacetamolTotal = context.GetParacetamolCount();
        MefinamicTotal = context.GetMefinamicCount();
        BiogesicTotal = context.GetBiogesicCount();

        residentMedicines = context.GetMedicines();
    }
}