@page "/secretary/household-list"
@layout SecretaryLayout
@inject Context context
@inject IJSRuntime JS
<div class="container" style="margin-top: 30px;">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Household List</h1>
        </div>
    </div>
</div>
<div class="container" style="margin-top: 25px;">
    <div class="row">
        <div class="row">
            <div class="col d-flex justify-content-between">
                <Button Color="Color.Primary" Clicked="@GenerateRecord">Generate Record</Button>
            </div>
        </div>
        <div class="col">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button">Purok</button>
                <div class="dropdown-menu"><a class="dropdown-item" href="#">Purok 1A</a><a class="dropdown-item" href="#">Purok 1A</a><a class="dropdown-item" href="#">Purok 2</a><a class="dropdown-item" href="#">Purok 3</a><a class="dropdown-item" href="#">Purok 4</a><a class="dropdown-item" href="#">Purok 5</a><a class="dropdown-item" href="#">Purok 6</a><a class="dropdown-item" href="#">Purok 7</a></div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center" style="margin-top: 24px;">
        <div class="col-xl-10 col-xxl-9">
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID No.</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Member</th>
                                    <th>Purok</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(ResidentModel household in resident)
                                {
                                    @if (context.isArchived(household))
                                    {
                                        string stringurl = $"/secretary/household/details/{household.GetID()}";
                                        <HouseholdRow 
                                        ID="@household.GetID()" 
                                        Lastname="@household.GetResidentLastName()" 
                                        Firstname="@household.GetResidentFirstName()" 
                                        Middlename="@household.GetResidentMiddleName()" 
                                        Member="@household.Num_of_fam" 
                                        Purok="@household.GetPurok()" 
                                        stringurl="@stringurl"/>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @* <div class="card-footer">
                    <nav>
                        <ul class="pagination pagination-sm mb-0 justify-content-center">
                            <li class="page-item"><a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
                        </ul>
                    </nav>
                </div> *@
            </div>
        </div>
    </div>
</div>

@code {
    public List<ResidentModel> resident = new List<ResidentModel>();
    public List<HouseholdModel> households = new List<HouseholdModel>();
    protected override void OnInitialized()
    {
        households = context.GetHouseholds();
        resident = context.GetResidents();

        //Something Filter idk lmao
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            households = context.GetHouseholds();
            resident = context.GetResidents();
        }
    }

    private int GetFamilyMemberCount(int memberId)
    {
        HouseholdModel? household = households.Find(h => h.MemberID == memberId);
        return household?.FamilyCount ?? 0;
    }

    private void GenerateRecord()
    {
        context.GenerateHousehold(households, JS);
    }
}